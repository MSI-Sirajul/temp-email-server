# ============================================
# PUBLIC EMAIL SERVER CONFIGURATION
# ============================================

# Server Ports
SMTP_PORT=1025
HTTP_PORT=3000

# Domain Configuration
# আপনার পাবলিক আইপি অটো ডিটেক্ট হবে
# কাস্টম ডোমেইন থাকলে এখানে দিন
# PUBLIC_DOMAIN=yourdomain.com

# Email Settings
EMAIL_EXPIRY_HOURS=24
MAX_EMAILS_PER_ADDRESS=100
ALLOW_ATTACHMENTS=true
MAX_ATTACHMENT_SIZE=5MB

# Security
ALLOW_RELAY=false
REQUIRE_AUTH=false

# Ngrok Settings (ঐচ্ছিক)
USE_NGROK=false
NGROK_AUTH_TOKEN=your_token_here

# Logging
LOG_LEVEL=info
SAVE_EMAILS=true

# Web Interface
THEME=dark
AUTO_REFRESH_SECONDS=10
# Manual Public IP
MANUAL_PUBLIC_IP=58.145.190.226
